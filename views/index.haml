!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, minimum-scale=1, maximum-scale=1", :name => "viewport"}
    %title Bicing
    %link{:href => "http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.css", :rel => "stylesheet"}
    %link{:href => "http://jquerymobile.com/test/themes/valencia/", :rel => "stylesheet"}
    %script{:src => "http://code.jquery.com/jquery-1.5.min.js", :type => "text/javascript"}
    %script{:src => "http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.js", :type => "text/javascript"}
    %script{:src => "http://ajax.microsoft.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js", :type => "text/javascript"}

    %script#stationTemplate{:type => "text/x-jquery-tmpl"}
      %li.ui-btn.ui-btn-icon-right.ui-li.ui-btn-down-c.ui-btn-up-c{"data-theme" => "c"}
        .ui-btn-inner.ui-li
          .ui-btn-text
            %a.ui-link-inherit{:href => "index.html"}
              ${direccio}
              %br
              %small ${distance}
              %span.ui-li-count.ui-btn-up-c.ui-btn-corner-all ${foratsPlens} / ${foratsBuits}
          %span.ui-icon.ui-icon-arrow-r

    :sass
      .count
        background-color: red


  %body
    #home{"data-role" => "page"}
      %div{"data-role" => "header"}
        %h1 Bicing
      %div{"data-role" => "content"}
        %ul#stations{"data-role" => "listview"}

      %div{"data-role" => "footer"}
        %h4 Víctor Martínez

    :javascript
      $(function() {
          $("#stationTemplate").template("stationTemplate");
          $.mobile.pageLoading();
          navigator.geolocation.getCurrentPosition(function(position) {
              $.getJSON("stations.json", {longitude: position.coords.longitude, latitude: position.coords.latitude }, function(response) {
                  //console.log(response);
                  $(response).each(function(){
                    // #direccio: "Nova Bocana"
                    // #distance: 0.9195684005084113
                    // #foratsBuits: 24
                    // #foratsPlens: 3
                    // #id: 400
                    // #x: 2.187797
                    // #y: 41.370317
                    $.tmpl("stationTemplate", this).appendTo($("#stations"));
                  });
                  $.mobile.pageLoading(true);
                  $('#home').attr('data-url','home');
                  $('#home').page();
              });
          }, function() {
          }, { enableHighAccuracy:true,maximumAge:600000 });
      });